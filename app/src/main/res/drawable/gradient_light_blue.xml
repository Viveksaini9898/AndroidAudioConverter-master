<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/pressColor"/>
            <corners
                android:radius="4dp"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#607ceb"
                android:endColor="#983fd4"
                android:angle="0"/>
            <corners
                android:radius="4dp"/>

        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#607ceb"
                android:endColor="#a33bff"
                android:angle="0"/>

            <corners
                android:radius="4dp"/>
        </shape>
    </item>
</selector>