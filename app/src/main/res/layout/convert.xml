    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/timings"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/minusLeft"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:text="-"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="@drawable/semi_circular_left"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/leftText"
        android:text=""
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@color/holo_red"
        android:layout_toRightOf="@+id/minusLeft"
        />
        <TextView
            android:id="@+id/plusLeft"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:text="+"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_toRightOf="@+id/leftText"
            android:background="@drawable/semi_circular_right"
            />
        <TextView
            android:id="@+id/difference"
            android:text=""
            android:textColor="@android:color/holo_red_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/minusRight"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:text="-"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_toLeftOf="@+id/rightText"
            android:background="@drawable/semi_circular_left"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/rightText"
            android:gravity="center"
            android:background="@color/holo_red"
            android:textColor="@android:color/white"
            android:text=""
            android:layout_toLeftOf="@+id/plusRight"
            />
        <TextView
            android:id="@+id/plusRight"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:text="+"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/semi_circular_right"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/cutterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/timings"
        >
      <cafe.adriel.androidaudioconverter.sample.MarkerView
          android:id="@+id/leftThumb"
          android:layout_width="wrap_content"
          android:layout_height="200dp"
          android:background="@drawable/left_thumb"
          android:elevation="6dp"
          android:layout_alignParentLeft="true"
          android:layout_marginLeft="5dp"
          android:layout_marginTop="30dp"
          />
      <View
          android:id="@+id/viewLeft"
          android:layout_width="1dp"
          android:layout_height="200dp"
          android:background="#80000000"
          android:layout_alignParentLeft="true"
          android:elevation="5dp"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="30dp"
          />
       <!-- <View
            android:id="@+id/viewLeft"
            android:layout_width="1dp"
            android:layout_height="200dp"
            android:background="#80000000"
            android:layout_alignParentLeft="true"
            android:elevation="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            />-->
      <SeekBar
          android:id="@+id/sbChangeSeekPosition"
          android:layout_width="match_parent"
          android:layout_height="220dp"
          android:progressDrawable="@null"
          android:background="@null"
          android:thumb="@drawable/music_thumb"
          android:elevation="5dp"
          android:paddingLeft="20dp"
          android:paddingRight="20dp"
          android:layout_marginTop="30dp"
          />
      <cafe.adriel.androidaudioconverter.sample.AudioWaveformView
          android:id="@+id/waveform"
          android:layout_width="match_parent"
          android:layout_height="200dp"
          android:elevation="2dp"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="30dp"
          android:layout_marginRight="20dp"
          />
      <cafe.adriel.androidaudioconverter.sample.MarkerView
          android:id="@+id/rightThumb"
          android:layout_width="wrap_content"
          android:layout_height="200dp"
          android:background="@drawable/right_thumb"
          android:layout_alignParentRight="true"
          android:elevation="6dp"
          android:layout_marginTop="30dp"
          android:layout_marginRight="5dp"
          />
      <View
          android:id="@+id/viewRight"
          android:layout_width="1dp"
          android:layout_height="200dp"
          android:background="#80000000"
          android:layout_alignParentRight="true"
          android:elevation="5dp"
          android:layout_marginTop="30dp"
          android:layout_marginRight="20dp"
          />
    </RelativeLayout>
    <ImageView
        android:id="@+id/play_from_left"
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/play_from_left"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@+id/play"
        android:layout_below="@+id/cutterLayout"
        android:background="@drawable/stop_background"
        />
        <ImageView
          android:id="@+id/play"
          android:layout_width="55dp"
          android:layout_height="40dp"
          android:layout_marginTop="30dp"
          android:layout_alignParentRight="true"
          android:src="@drawable/play"
            android:scaleType="centerInside"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/cutterLayout"
            android:background="@drawable/stop_background"
          />
  </RelativeLayout>